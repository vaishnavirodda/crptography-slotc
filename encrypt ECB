#include <stdio.h>
#include <string.h>
#define BLOCK_SIZE 8

void encrypt_ECB(const unsigned char *plaintext, int plaintext_len, const unsigned char *key, unsigned char *ciphertext) {

    int numBlocks = plaintext_len / BLOCK_SIZE;

    for (int i = 0; i < numBlocks; i++) {
